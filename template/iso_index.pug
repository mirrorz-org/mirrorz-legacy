doctype html
html
  include head.pug
  body
    #app-container
      .sidebar
        a.active(aria-current='page', href='/_/')
          img.sidebar-logo(src='/static/img/mirrorz.svg',alt='ISO')
        a(href='/_/list')
          h2 List
        a(href='/_/site')
          h2 Site
        a(href='/_/about')
          h2 About
      main
        .iso
          .category
            a(href='/_/os',class=(navbar_active === 'os' ? 'active' : ''))
              h2 os
            a(href='/_/app',class=(navbar_active === 'app' ? 'active' : ''))
              h2 app
            a(href='/_/font',class=(navbar_active === 'font' ? 'active' : ''))
              h2 font
          .distro-urls-container
            .distro
              each d in sidebar
                a(href=d.url)
                  h3=d.name
            .urls
              .logo-404
                div='Select one ' + navbar_active + ' from the sidebar'